#!/usr/bin/perl

$TEST_DESCRIPTION = "default use of zmdp benchmark/evaluate on a pomdp";
require "testLibrary.perl";
&testZmdpBenchmark(cmd => "$zmdpBenchmark -o out.policy $pomdpsDir/three_state.pomdp",
		   expectedLB => 20.8260,
		   expectedUB => 20.8269,
		   testTolerance => 0.01,
		   outFiles => ["bounds.plot", "inc.plot", "sim.plot"]);
&testZmdpEvaluate(cmd => "$zmdpEvaluate $pomdpsDir/three_state.pomdp",
		  expectedMean => 20.826,
		  testTolerance => 1.0,
		  outFiles => ["scores.plot", "sim.plot"]);


